#!/usr/bin/env grrovy
pipeline {
    agent any
	environment {
	    AWS_ACCESS_KEY_ID = credentials('AWS_SECRET_ACCESS_KEY')
            AWS_SECRET_ACCESS_KEY = credentials('AWS_ACCESS_KEY_ID')
	    AWS_DEFAULT_REGION = "ap-southeast-1"
	}
	stages{ 
	    stage("create an EKS Cluster") {
		steps {
			script {
				dir('terraform/eks') {
					sh "terraform init"
					sh "terraform destroy -auto-approve"
					}	
				}	
			}
		}
	}
}	